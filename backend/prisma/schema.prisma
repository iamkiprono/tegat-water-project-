generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Farmer {
  id       Int       @id @default(autoincrement())
  name     String
  plotNo   String     @unique
  readings Reading[]
  payments Payment[]
}

model Reading {
  id         Int      @id @default(autoincrement())
  month      Int
  year       Int
  value      Float
  farmer     Farmer   @relation(fields: [farmerId], references: [id])
  farmerId   Int
  @@unique([farmerId, month, year])
}

model Payment {
  id        Int       @id @default(autoincrement())
  transactionId String    @default("") 
  amount    Float
  date      DateTime  @default(now())
  paymentType String
  farmer    Farmer    @relation(fields: [farmerId], references: [id])
  farmerId  Int
}


